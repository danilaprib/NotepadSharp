<Window x:Class="NotepadSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotepadSharp"
        mc:Ignorable="d"
        Title="NotepadSharp" Height="600" Width="800"
        Icon="/NotepadSharp_icon.ico"
        Name="mainWindow">

    <!--
    <Window.CommandBindings>
        <CommandBinding CanExecute="ExitApp_CanExecute"
                        Command="{x:Static local2:MyCommands.ExitApp}"
                        Executed="ExitApp_Executed">
            
        </CommandBinding>
    </Window.CommandBindings>


    <Window.InputBindings>
        <KeyBinding Command="{local2:MyCommands.ExitApp}"
                    Gesture="CTRL+A">
            
        </KeyBinding>
    </Window.InputBindings>
    
    
        <Window.InputBindings>
        <KeyBinding Key="NumPad0"
              Modifiers="Control" 
              Command="Application.Shutdo" />
    </Window.InputBindings>
    -->

    <Window.Resources>
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,2.5,2.5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Foreground" Value="Gainsboro"/>
            <Setter Property="Background" Value="DimGray"/>
        </Style>

        <Style x:Key="GridStyle" TargetType="Grid">
            <Setter Property="Background" Value="Silver"/>
        </Style>

        <Style x:Key="GridSplitterStyle" TargetType="GridSplitter">
            <Setter Property="BorderBrush" Value="Firebrick"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style x:Key="TerminalStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="LimeGreen"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Visible"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Visible"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="2px"/>
            <Setter Property="MinHeight" Value="220px"/>
            <Setter Property="MaxHeight" Value="280px"/>
            <Setter Property="MinWidth" Value="220px"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>







    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" MinHeight="60" MaxHeight="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <!-- <RowDefinition MinHeight="15" Height="55" MaxHeight="350"></RowDefinition> -->
        </Grid.RowDefinitions>


        <Grid Style="{StaticResource GridStyle}" Background="Navy">
            <StackPanel>
                <!-- menu buttons -->
                <Menu VerticalAlignment="Top">

                    <MenuItem Header="File" FontSize="16">


                        <!-- 
                        New
                        Open...
                        Save
                        Save as...
                        Exit
                        -->


                        <MenuItem Name="new_file_item" Header="New                CTRL+N" FontSize="14">

                        </MenuItem>
                        <MenuItem Name="open_file_item" Header="Open...            CTRL+O" FontSize="14" Click="open_file_item_Click">

                        </MenuItem>
                        <MenuItem Header="Save	              CTRL+S" FontSize="14" Click="save_button_ClickAsync">

                        </MenuItem>
                        <MenuItem Header="Save as...   CTRL+SHIFT+O" FontSize="14" Click="save_as_button_Click">

                        </MenuItem>
                        <MenuItem Name="exit_file_item" Header="Exit" FontSize="14" Click="exit_file_item_Click">
                            <!--
                            <InputBindingCollection>
                                <KeyBinding Key="NumPad0"
                                    Command="MyCommands.ExitApp"/>
                            </InputBindingCollection>
                            -->
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="Edit" FontSize="16">
                        <MenuItem Header="Font sizes" FontSize="14">
                            <Menu>
                                <MenuItem Header="8" FontSize="12">
                                    
                                </MenuItem>
                            </Menu>
                        </MenuItem>
                        <MenuItem Header="Replace" FontSize="14">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Search" FontSize="16">
                        <MenuItem Header="Replace" FontSize="14">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Settings" FontSize="16">
                        <MenuItem x:Name="settingsThemeSubItem" Header="Theme" FontSize="14" Click="settingsThemeSubItem_Click">

                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="About" FontSize="16">
                        <MenuItem Header="Version" FontSize="14">

                        </MenuItem>
                    </MenuItem>
                </Menu>

                <!--icons like from Notepad++ go here-->
                <StackPanel Orientation="Horizontal">
                    <Button Name="create_button" Width="32" Height="32" ToolTip="New (Ctrl + N)" Click="create_button_Click">
                        <Image Source="/new_icon.png" Width="24" Height="24"></Image>
                    </Button>

                    <Button Name="open_button" Width="32" Height="32" ToolTip="Open (Ctrl + O)" Click="open_button_Click">
                        <Image Source="/open_icon.png" Width="24" Height="24"></Image>
                    </Button>

                    <Button Name="list_button" Width="32" Height="32" ToolTip="List" Click="list_button_Click">
                        <Image Source="/list_icon.png" Width="24" Height="24"></Image>
                    </Button>

                    <Button Name="save_button"  Width="32" Height="32" ToolTip="Save (Ctrl + S)" IsEnabled="False" Click="save_button_ClickAsync">
                        <Image Source="/save_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="save_as_button" Width="32" Height="32" ToolTip="Save as... (Ctrl + Alt + S)" Click="save_as_button_Click">
                        <Image Source="/save_as_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="exit_button" Width="32" Height="32" ToolTip="Exit without save" IsEnabled="False" Click="exit_button_Click">
                        <Image Source="/exit_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="save_and_exit_button" Width="32" Height="32" ToolTip="Save and exit" IsEnabled="False" Click="save_and_exit_button_ClickAsync">
                        <Image Source="/save_and_exit_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="clear_button" Width="32" Height="32" ToolTip="Clear terminal" Click="clear_button_Click">
                        <Image Source="/clear_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="delete_button" Width="32" Height="32" ToolTip="Move to Recycle Bin" Click="delete_button_Click">
                        <Image Source="/delete_icon.png" Width="24" Height="24"></Image>
                    </Button>
                    <Button Name="perma_delete_button" Width="32" Height="32" ToolTip="Delete file" Click="perma_delete_button_Click">
                        <Image Source="/perma_delete_icon.png" Width="24" Height="24"></Image>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*" MinWidth="20"></ColumnDefinition>
                <ColumnDefinition Width="60*" MinWidth="20"></ColumnDefinition>
                <ColumnDefinition Width="20*" MinWidth="20"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid Margin="2">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                        <TextBlock TextAlignment="Left" Margin="5,0,0,0">Directory</TextBlock>
                        <TextBox Name="current_directory" Text="C:/Users/danii/Desktop/dir" BorderBrush="LimeGreen" BorderThickness="2px" Height="22px" MinWidth="220px"  Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" AcceptsReturn="False" AcceptsTab="False">

                        </TextBox>

                        <TextBlock TextAlignment="Left" Margin="5,0,0,0">File</TextBlock>
                        <TextBox Name="file_name" Text="file name" BorderBrush="LimeGreen" BorderThickness="2px" Height="22px" MinWidth="220px"  Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" AcceptsReturn="False" AcceptsTab="False">

                        </TextBox>

                        <TextBlock TextAlignment="Left" Margin="5,0,0,0">Terminal (Input)</TextBlock>

                        <TextBox Style="{StaticResource TerminalStyle}" Name="terminal" TextChanged="terminal_TextChanged" AcceptsReturn="True">

                        </TextBox>
                        
                        <TextBlock TextAlignment="Left" Margin="5,0,0,0">Output</TextBlock>
                        
                        <TextBox Style="{StaticResource TerminalStyle}" Name="output" IsReadOnly="True">

                        </TextBox>
                    </StackPanel>
                </Grid>




            </Grid>

            <GridSplitter Grid.Column="0" HorizontalAlignment="Right" Width="5px" Style="{StaticResource GridSplitterStyle}"/>

            <Grid Grid.Column="1">
                <!--use RichTextBox here instead-->

                <TextBox Name="text_panel" AcceptsTab="True" AcceptsReturn="True" Background="DarkSlateGray" Foreground="WhiteSmoke">
                    text here
                </TextBox>
            </Grid>


            <GridSplitter Grid.Column="1" HorizontalAlignment="Right" Width="5px" Style="{StaticResource GridSplitterStyle}"/>

            <!-- utils -->
            <Grid Grid.Column="2">



                <Grid.RowDefinitions>
                    <!--scripts-->
                    <RowDefinition MinHeight="20" Height="20*"></RowDefinition>
                    <!--calculator-->
                    <RowDefinition MinHeight="20" Height="60*"></RowDefinition>
                    <!--units converter-->
                    <RowDefinition MinHeight="20" Height="20*"></RowDefinition>
                </Grid.RowDefinitions>






                <!-- text style panel
                
                    radio buttons for style of text that you will write
                    buttons for changing selected text style
                
                    WHY THIS STACK PANEL DOESNT STRETCH AND THERE IS WHITE SPACE AT THE RIGHT?
                -->
                <StackPanel Grid.Row="0" Orientation="Vertical"  HorizontalAlignment="Stretch">

                    <!-- scripts -->
                    <TextBlock Margin="2" FontWeight="DemiBold" HorizontalAlignment="Left">
                        Font script
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <RadioButton Name="rb1" Width="70" Margin="2" VerticalAlignment="Center" >Normal</RadioButton>
                        <RadioButton Name="rb2" Width="70" Margin="2" VerticalAlignment="Center">Underscript</RadioButton>
                        <RadioButton Name="rb3" Width="70" Margin="2" VerticalAlignment="Center">Superscript</RadioButton>
                    </StackPanel>

                    <!-- font style (font-weight) -->
                    <TextBlock Margin="2" FontWeight="DemiBold" HorizontalAlignment="Left">
                        Font style
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <CheckBox Name="text_formatter_italic_checkbox" Width="70" Margin="2" VerticalAlignment="Center" Checked="text_formatter_italic_checkbox_Checked" Unchecked="text_formatter_italic_checkbox_Unchecked">Italic</CheckBox>
                        <CheckBox Name="text_formatter_bold_checkbox" Width="70" Margin="2" VerticalAlignment="Center" Checked="text_formatter_bold_checkbox_Checked" Unchecked="text_formatter_bold_checkbox_Unchecked">Bold</CheckBox>


                        <!--
                        <RadioButton Name="text_formatter_normal" Width="70" Margin="2" VerticalAlignment="Center" Checked="text_formatter_normal_Checked" IsChecked="True">Normal</RadioButton>
                        <RadioButton Name="text_formatter_italic" Width="70" Margin="2" VerticalAlignment="Center" Checked="text_formatter_italic_Checked">Italic</RadioButton>
                        <RadioButton Name="text_formatter_bold" Width="70" Margin="2" VerticalAlignment="Center" Checked="text_formatter_bold_Checked">Bold</RadioButton>
                        -->
                    </StackPanel>

                    <!-- buttons for changing selected text style
                        not enabled when no text is selected
                    -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Button Width="35" Height="20" Margin="5">
                            normal
                        </Button>
                        <Button Width="35" Height="20" Margin="5">
                            bold
                        </Button>
                        <Button Width="35" Height="20" Margin="5">
                            italic
                        </Button>
                        <Button Width="35" Height="20" Margin="5">
                            underlined
                        </Button>
                        <Button Width="35" Height="20" Margin="5">
                            strikethrough
                        </Button>
                    </StackPanel>



                </StackPanel>



                <GridSplitter Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="5px" Style="{StaticResource GridSplitterStyle}"/>


                <!--calculator panel-->
                <StackPanel Grid.Row="1">
                    <TextBox Name="calc_panel" Margin="10px" 
                             HorizontalAlignment="Center" 
                             Width="160px"
                             Height="47"
                             TextAlignment="Center"
                             VerticalContentAlignment="Bottom"
                             HorizontalContentAlignment="Center"
                             Foreground="GhostWhite"
                             Background="RoyalBlue"
                             BorderThickness="2"
                             BorderBrush="DarkSlateGray"
                             TextChanged="calc_panel_TextChanged">
                        2,111,111,111,111,111
                    </TextBox>


                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="%"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Name="calc_clear_everything_button" Content="CE" Click="calc_clear_everything_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Name="calc_clear_button" Content="C" Click="calc_clear_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="dlt"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="1/x"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="^2"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="Vx"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="/"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="7" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="8" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="9" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="*" Click="calc_button_Click"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="4" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="5" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="6" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="-" Click="calc_button_Click"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="1" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="2" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="3" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="+" Click="calc_button_Click"></Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource CalcButtonStyle}" Content="+/-"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="0" Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Content="." Click="calc_button_Click"></Button>
                        <Button Style="{StaticResource CalcButtonStyle}" Name="equal_button" Content="=" Background="CornflowerBlue" Click="equal_button_Click"></Button>
                    </StackPanel>
                    <Button Name="calc_insert_button" Width="150" Height="32" Margin="2" Background="SkyBlue" Click="calc_insert_button_Click">
                        INSERT
                    </Button>
                </StackPanel>


                <GridSplitter Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Height="5px" Style="{StaticResource GridSplitterStyle}"/>


                <!--units converter panel-->
                <StackPanel Grid.Row="2" Orientation="Vertical">

                    <!-- units selection -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock FontStyle="Oblique" FontSize="16" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            Units
                        </TextBlock>
                        <ComboBox Margin="5" Width="110">
                            <ComboBoxItem IsSelected="True">
                                Length
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Time
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Speed
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Temperature
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Area
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Mass
                            </ComboBoxItem>
                            <ComboBoxItem>
                                Volume
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <!-- from selection -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock FontStyle="Oblique" FontSize="16" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            From:
                        </TextBlock>
                        <TextBox Name="converter_from_panel" Width="60" Margin="5" TextChanged="converter_from_panel_TextChanged">
                            20
                        </TextBox>
                        <ComboBox Margin="5" Width="45">
                            <ComboBoxItem IsSelected="True">
                                inch
                            </ComboBoxItem>
                            <ComboBoxItem>
                                cm
                            </ComboBoxItem>
                        </ComboBox>
                        <Button Name="converter_from_insert_button" Width="60" Height="25" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Foreground="Black" Background="SkyBlue" FontSize="14" FontWeight="Bold" Click="converter_from_insert_button_Click">
                            INSERT
                        </Button>
                    </StackPanel>

                    <!-- REVERSE and stuff like that-->
                    <StackPanel HorizontalAlignment="Left">
                        <Button Name="converter_invert_button" Width="64" Height="32" ToolTip="Invert units" HorizontalAlignment="Right" Margin="5">
                            <Image Source="/NotepadSharp;component/invert_icon.png" Width="24" Height="24"></Image>
                        </Button>
                    </StackPanel>


                    <!-- to selection -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock FontStyle="Oblique" FontSize="16" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                            To:
                        </TextBlock>
                        <TextBox Name="converter_to_panel" Width="60" Margin="5" TextChanged="converter_to_panel_TextChanged" IsReadOnly="True">
                            <!-- 20 cm == 7.87402 inches -->
                        </TextBox>
                        <ComboBox Margin="5" Width="45">
                            <ComboBoxItem>
                                inch
                            </ComboBoxItem>
                            <ComboBoxItem IsSelected="True">
                                cm
                            </ComboBoxItem>
                        </ComboBox>
                        <Button Name="converter_to_insert_button" Width="60" Height="25" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Foreground="Black" Background="SkyBlue" FontSize="14" FontWeight="Bold" Click="converter_to_insert_button_Click">
                            INSERT
                        </Button>
                    </StackPanel>

                    <!-- CONVERT and CLEAR buttons-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Name="converter_convert_button" Width="80" Height="25" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Foreground="Black" Background="#ffdc5e" FontSize="14" FontWeight="Bold" Click="converter_convert_button_Click">
                            CONVERT
                        </Button>
                        <Button Name="converter_clear_button" Width="60" Height="25" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="2" Foreground="White" Background="#bf001d" FontSize="14" FontWeight="Bold" Click="converter_clear_button_Click">
                            CLEAR
                        </Button>

                    </StackPanel>

                    <!-- formula -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Margin="2">
                            Formula:
                        </TextBlock>
                        <TextBlock Margin="2" TextWrapping="WrapWithOverflow">
                            multiply the length value by 2.54
                        </TextBlock>
                    </StackPanel>

                </StackPanel>



            </Grid>

        </Grid>
    </Grid>
</Window>
